        border-radius: 4px;
      }
      input[type=submit] {
        width: 20%;
        background-color: #0081bd;
        color: white;
        padding: 12px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }
      input[type=file] {
        padding: 12px 12px;
        border-radius: 4px;
        cursor: pointer;
      }
      .divconteiner{
        padding-top: 5px;
        padding-bottom: 5px;   
      }
      input[type=button] {
        width: 10%;
        background-color: #626466;
        color: white;
        padding: 5px 5px;
        border: none;
        border-radius: 50px;
        cursor: pointer;
      }
      input[type=button]:hover {
        background-color: #00b5fc;
      }
    
